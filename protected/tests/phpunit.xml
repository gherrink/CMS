<phpunit bootstrap="bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">
	
    <php>
        <const name="TEST_BASE_URL" value="http://localhost/"/>
        <const name="TEST_BASE_URL_PATH" value="cms/index-test.php/de/"/>
    </php>
	
    <selenium>
        <browser name="Firefox 4 Linux" browser="*firefox"/>
    </selenium>
	
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../components</directory>
            <directory suffix=".php">../controllers</directory>
            <directory suffix=".php">../models</directory>
            <exclude>
                <file>./WebTestCase.php</file>
                <directory suffix=".php">functional</directory>
            </exclude>
        </whitelist>
    </filter>
	
</phpunit>
